<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.QuoteApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.QuoteApp" parent="Base.Theme.QuoteApp" />

    <style name="Splash" parent="Base.Theme.QuoteApp">
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.QuoteApp">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="CutShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="colorAccent">@color/bg</item>
    </style>

</resources>